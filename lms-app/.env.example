# ==================================
# SHREE SANGEETHA AALAYA LMS
# Environment Configuration Template
# ==================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ==================================
# APPLICATION SETTINGS
# ==================================
RAILS_ENV=development
SECRET_KEY_BASE=your_secret_key_base_here

# ==================================
# EMAIL CONFIGURATION
# ==================================

# Enable/Disable Email Delivery (set to 'true' to send real emails)
EMAIL_DELIVERY_ENABLED=false

# Email Provider: Choose one (smtp, sendgrid, mailgun, gmail, aws_ses)
EMAIL_PROVIDER=smtp

# Common Email Settings
EMAIL_FROM_ADDRESS=noreply@shreesangeetaalaya.art
EMAIL_FROM_NAME=Shree Sangeetha Aalaya

# SMTP Settings (Generic - works with most providers)
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_DOMAIN=shreesangeetaalaya.art
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true

# SendGrid Configuration (Alternative)
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# Mailgun Configuration (Alternative)
# MAILGUN_API_KEY=your_mailgun_api_key_here
# MAILGUN_DOMAIN=mg.shreesangeetaalaya.art

# AWS SES Configuration (Alternative)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# ==================================
# SMS CONFIGURATION
# ==================================

# Enable/Disable SMS Delivery (set to 'true' to send real SMS)
SMS_DELIVERY_ENABLED=false

# SMS Provider: Choose one (twilio, msg91, none)
SMS_PROVIDER=msg91

# Twilio Configuration
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# MSG91 Configuration (Recommended for India)
MSG91_AUTH_KEY=your_msg91_auth_key_here
MSG91_SENDER_ID=SHRSNG
MSG91_ROUTE=4

# ==================================
# DATABASE CONFIGURATION
# ==================================

# For SQLite (Development - default)
# No configuration needed, uses db/development.sqlite3

# For PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/lms_production

# ==================================
# GOOGLE PHOTOS API (Optional)
# ==================================
# GOOGLE_PHOTOS_CLIENT_ID=your_client_id
# GOOGLE_PHOTOS_CLIENT_SECRET=your_client_secret
# GOOGLE_PHOTOS_ALBUM_ID=your_album_id

# ==================================
# PAYMENT GATEWAY (Future)
# ==================================
# RAZORPAY_KEY_ID=your_razorpay_key_id
# RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ==================================
# STORAGE CONFIGURATION
# ==================================

# Storage Provider: local, s3, google, azure
STORAGE_PROVIDER=local

# AWS S3 Configuration (if using S3)
# AWS_S3_BUCKET=your-bucket-name
# AWS_S3_REGION=us-east-1
# AWS_S3_ACCESS_KEY_ID=your_access_key
# AWS_S3_SECRET_ACCESS_KEY=your_secret_key

# ==================================
# REDIS (For Background Jobs - Optional)
# ==================================
# REDIS_URL=redis://localhost:6379/1

# ==================================
# APPLICATION URLs
# ==================================
APP_URL=http://localhost:3000
APP_HOST=localhost

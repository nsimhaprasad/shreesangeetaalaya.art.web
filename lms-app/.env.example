# ==================================
# SHREE SANGEETHA AALAYA LMS
# Environment Configuration
# ==================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ==================================
# APPLICATION SETTINGS
# ==================================
RAILS_ENV=development
SECRET_KEY_BASE=your_secret_key_base_here
APP_NAME=Shree Sangeetha Aalaya
APP_URL=http://localhost:3000
APP_HOST=localhost:3000

# ==================================
# DATABASE (Neon PostgreSQL)
# ==================================
# Get your connection string from Neon dashboard
DATABASE_URL=postgresql://username:password@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=

# ==================================
# BREVO EMAIL SERVICE (Free Tier: 300 emails/day)
# ==================================
# Sign up at https://www.brevo.com
BREVO_API_KEY=your_brevo_api_key_here
EMAIL_FROM_ADDRESS=noreply@shreesangeetaalaya.art
EMAIL_FROM_NAME=Shree Sangeetha Aalaya
EMAIL_DELIVERY_ENABLED=true

# ==================================
# SMS CONFIGURATION (Optional)
# ==================================
SMS_DELIVERY_ENABLED=false
SMS_PROVIDER=msg91
MSG91_AUTH_KEY=your_msg91_auth_key_here
MSG91_SENDER_ID=SHRSNG
MSG91_ROUTE=4

# ==================================
# FILE STORAGE (Cloudinary Free Tier)
# ==================================
# Sign up at https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
STORAGE_PROVIDER=cloudinary

# ==================================
# SENTRY ERROR TRACKING (Free Tier)
# ==================================
# Sign up at https://sentry.io
SENTRY_DSN=your_sentry_dsn_here

# ==================================
# RAILS CONFIG
# ==================================
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=2
